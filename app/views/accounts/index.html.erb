<div class="container">

	<% if @accounts.blank? %>
		<h3>Järjestelmään ei ole talletettu yrityksiä.</h3>
	<% else %>
		<br /><br />
		<h3>Talletetut yritykset</h3>
		<table class="table table-striped" data-sort-name="name" data-sort-order="desc">
			<thead>
				<tr>
					<th data-field="name">Yritys</th>
					<th data-field="street">Katuosoite</th>
					<th data-field="zip_code">Postinumero</th>
					<th data-field="city">Postitoimipaikka</th>
					<th data-field="whole_name">Asiakkuuspäällikkö</th>
					<th data-field="btn1", style="width: 5% "></th>
				</tr>
			</thead>
			<tbody>
				<% @accounts.each do |account| %>
					<tr>
					<td><%= link_to account.name, { :action => 'edit', :id => account.id} -%></td>
					<td><%= account.street %></td>
					<td><%= account.zip_code %></td>
					<td><%= account.city %></td>
					<td><%= account.user.whole_name %></td>
					<td>
						<td>
						
							<%= button_to "Kontaktit", {:controller => 'contacts', :action => 'index_by_account'}, :params => { :account_id => account.id },  :method => :get, class: 'btn btn-green btn-xs' %> 

						</td>
					</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	<% end %>
  <p><%= button_to "Uusi yritys", {:controller => 'accounts', :action => 'new'}, :method => :get , class: 'btn btn-green' %></p>
  <br />
  <br />
</div>