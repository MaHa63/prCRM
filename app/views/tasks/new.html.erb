<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4 text-center">

			<h1>Lisää uusi taski</h1>

			
      <%= bootstrap_form_for( :tasks,
                              url: {action: "create"}) do |f| %>


        <%= f.text_area  :description,
        									cols: "43",
        									rows: "2",
                          label: 'Kuvaus',
                          class: 'form-control' %>

		
        <%= f.select  :reason, [["Soitto", "1"], ["Email", "2"], ["Palaveri", "3"]], {prompt: "Valitse", label: "Tyyppi"}    %> 

       	<%= f.select  :state, [["Auki", "1"], ["Hoidettu", "2"]], {prompt: "Valitse", label: "Tila"}    %> 

        <%= f.collection_select :user_id, User.all, :id, 
					:whole_name, label: 'Vastuuhenkilö', prompt: "Valitse" %>
			
				<%= f.collection_select :account_id, Account.all, :id, 
					:name, label: 'Yritys', prompt: "Valitse" %>
			 	

        <%= f.submit 'Tallenna', class: 'btn btn-mha' %>	

			<% end %>
			<br />
			<!--<%= link_to 'Takaisin', {:action => 'index'} %> -->
			<%= button_to 'Takaisin', { :controller => :tasks, :action => 'index' }, :method => :get, class: 'btn btn-gray' %>

		</div>
	</div>
</div>