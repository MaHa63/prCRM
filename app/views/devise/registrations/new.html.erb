<div class="container" id="sign-up-form">
  <div class="row">
    <div class="col-sm-offset-4 col-sm-4">
      <h3>Rekisteröidy</h3>

        <%= bootstrap_form_for( resource, 
                                as: resource_name, 
                                url: registration_path(resource_name)) do |f| %>

          <%= f.text_field  :first_name,
                            label: 'Etunimi',
                            class: 'form-control' %>

          <%= f.text_field  :last_name,
                            label: 'Sukunimi',
                            class: 'form-control' %>

          <%= f.text_field  :email,
                            label: 'Sähköposti',
                            class: 'form-control' %>

          <%= f.password_field  :password,
                                label: 'Salasana',
                                class: 'form-control' %>

          <%= f.password_field  :password_confirmation,
                                label: 'Salasanan varmennus',
                                class: 'form-control' %>

          <%= f.submit 'Tallenna', class: 'btn btn-green' %>
  
        <% end %>
    </div>
  </div>
</div>

